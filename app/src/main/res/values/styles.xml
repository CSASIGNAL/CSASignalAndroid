<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item-->

        <item name="colorPrimary">@color/main_color_500</item>
        <item name="colorPrimaryDark">@color/main_color_700</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ImageViewStyle">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:contentDescription">@string/cd_main_image</item>
    </style>
    <style name="TextViewAppearance">
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">26dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="typeface">robotoRegular</item>
    </style>
    <style name="TextViewAppearance.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_color_grey_600</item>
        <item name="typeface">robotoMedium</item>
    </style>
    <style name="TextViewAppearance.Caption1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_color_grey_400</item>
        <item name="typeface">robotoRegular</item>
    </style>

    <style name="RippleStyle">
        <item name="rippleAlpha">0.7</item>
        <item name="rippleBackground">@android:color/transparent</item>
        <item name="rippleColor">@color/main_color_grey_300</item>
        <item name="rippleDelayClick">true</item>
        <item name="rippleDimension">45.0dip</item>
        <item name="rippleDuration">200</item>
        <item name="rippleFadeDuration">50</item>
        <item name="rippleHover">true</item>
        <item name="rippleInAdapter">false</item>
        <item name="rippleOverlay">true</item>
        <item name="ripplePersistent">false</item>
    </style>
</resources>
